<h1><%= @section.name -%> : Add Text Asset</h1>

<% form_for(@text_asset, :url => document_section_text_assets_path(@document, @section)) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', documents_path %>
